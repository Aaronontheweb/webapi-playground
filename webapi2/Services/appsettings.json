    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Akka": {
    "enabled": true,
    "loglevel": "INFO",
    "actor": {
      "provider": "cluster"
    },
    "extensions": [
