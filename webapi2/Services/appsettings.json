    ],
    "remote": {
      "dot-netty": {
        "tcp": {
          "port": 0,
          "hostname": "127.0.0.1",
          "log-transport": true,
          "enable-ssl": true,
          "ssl": {
            "suppress-validation": true,
            "certificate": {
              "path": "localhost.pfx",
              "password": "P@55w0rd"
            }
          }
        }
      }
    },
    "cluster": {
      "seed-nodes": [
        "akka.ssl.tcp://cluster@127.0.0.1:55555" // main seed node's address
      ],
      "roles": [
        "devonbike-cluster-worker"
      ]
    }
  }
}
